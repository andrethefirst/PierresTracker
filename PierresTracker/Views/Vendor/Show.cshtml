@{
  Layout = "_Layout";
}

@using PierresTracker.Models;

<h3>Orders for this vendor:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendor/@Model["vendor"].Id/order/@order.Id'>@order.Title</a></li>
}
</ol>

<div class="orderButton">
  <a href='/vendor/@Model["vendor"].Id/order/new'><button class="btn btn-success">New Order!</button></a>
  <a href='/vendor'><button class="btn btn-success">Vendor List</button></a>
  <a href='/'><button class="btn btn-success">Home Page</button></a>
</div>